<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#0C3F7E"
    tools:context=".AddBuilding">


    <RadioGroup
        android:id="@+id/radio_type"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="45dp"
        android:layout_marginTop="110dp"
        android:orientation="vertical">
        <RadioButton android:id="@+id/radio_basement"
            android:layout_width="250dp"
            android:layout_height="30dp"
            android:layout_marginTop="2dp"
            android:text="Basement"
            android:textSize="20dp"
            android:textColor="#FFFFFF"
            android:buttonTint="#FFFFFF"
            android:checked="true"/>

        <RadioButton android:id="@+id/radio_outside_building"
            android:layout_width="250dp"
            android:layout_height="30dp"
            android:layout_marginTop="17dp"
            android:textSize="20dp"
            android:buttonTint="#FFFFFF"
            android:text="Outside building"
            android:textColor="#FFFFFF"/>

        <RadioButton
            android:id="@+id/radio_penthouse"
            android:layout_width="wrap_content"
            android:layout_height="30dp"
            android:layout_marginTop="27dp"
            android:buttonTint="#FFFFFF"
            android:text="Penthouse"
            android:textColor="#FFFFFF"
            android:textSize="20dp" />

        <EditText
            android:id="@+id/editNoFloor"
            android:layout_width="160dp"
            android:layout_height="40dp"
            android:layout_marginStart="135dp"
            android:layout_marginTop="-34dp"
            android:background="@drawable/edittext_white_border"
            android:inputType="number"
            android:padding="5dp"
            android:textColor="#FFFFFF"
            android:textColorHint="#FFFFFF"
            android:hint="Number of floor"
            android:visibility="invisible"/>
    </RadioGroup>

    <EditText
        android:id="@+id/nameBuilding"
        android:layout_width="321dp"
        android:layout_height="50dp"
        android:layout_marginStart="20dp"
        android:layout_marginTop="30dp"
        android:background="@drawable/edittext_white_border"
        android:inputType="textPersonName"
        android:padding="5dp"
        android:textColor="#FFFFFF"
        android:textColorHint="#FFFFFF"
        android:hint="Name of building"/>

    <EditText
        android:id="@+id/address"
        android:layout_width="321dp"
        android:layout_height="50dp"
        android:layout_marginStart="20dp"
        android:layout_marginTop="290dp"
        android:background="@drawable/edittext_white_border"
        android:inputType="textPersonName"
        android:padding="5dp"
        android:textColor="#FFFFFF"
        android:textColorHint="#FFFFFF"
        android:hint="Address"/>

    <Button
        android:id="@+id/addBuildingBtn"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="77dp"
        android:padding="5dp"
        android:text="Add Building"
        android:textColor="#FFFFFF"
        android:background="@drawable/button_rounded_corners_blue"/>




</RelativeLayout>